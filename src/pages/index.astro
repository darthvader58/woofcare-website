---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <section class="flex flex-col items-center justify-center text-center py-24">
    <h1 class="text-4xl md:text-6xl font-extrabold mb-6 text-wcBold tracking-tight">
      Welcome to WoofCare
    </h1>
    <p class="text-xl md:text-2xl text-wcText mb-10 max-w-2xl">
      Tail-wagging care you can trust. Join us to connect dog owners, pet-lovers, and passionate volunteers for happier, healthier pups.
    </p>
    <a href="/join-us" class="bg-wcButton text-wcOffwhite font-semibold px-8 py-3 rounded-lg shadow hover:bg-wcBold transition">
      Join Us Today
    </a>
  </section>
</BaseLayout>
