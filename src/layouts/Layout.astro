---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "WoofCare - Where Every Bark Finds a Helping Hand. Connect with dog-help resources to find home and care for abandoned stray dogs." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="keywords" content="stray dogs, dog rescue, dog adoption, animal welfare, NGO, dog care">
  <title>{title} | WoofCare</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>
  <header class="header">
    <nav class="nav">
      <div class="container nav-container">
        <a href="/" class="logo">
          <span class="logo-woof">Woof</span><span class="logo-care">Care</span>
        </a>
        <ul class="nav-menu">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/join">Help Us</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h3>WoofCare</h3>
          <p>Where Every Bark Finds a Helping Hand</p>
          <p class="tagline">"Animals have no voice. Humanity must be their voice." - A.D Williams</p>
        </div>
        <div class="footer-section">
          <h4>Quick Links</h4>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/join">Join</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </div>
        <div class="footer-section">
          <h4>Contact</h4>
          <p>Email: woofcareepics@gmail.com</p>
          <p>Coming Soon on Google Play</p>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2025 WoofCare. All rights reserved.</p>
      </div>
    </div>
  </footer>
</body>
</html>

<style>
  .header {
    background-color: var(--white);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .nav {
    padding: 1rem 0;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.8rem;
    font-weight: 700;
    text-decoration: none;
  }

  .logo-woof {
    color: var(--primary-brown);
  }

  .logo-care {
    color: var(--dark-brown);
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  .nav-menu a {
    color: var(--text-dark);
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  .nav-menu a:hover {
    background-color: var(--cream);
    color: var(--primary-brown);
  }

  .footer {
    background: linear-gradient(to right, var(--dark-brown), var(--primary-brown));
    color: var(--white);
    padding: 3rem 0 1rem;
    margin-top: 4rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section h3,
  .footer-section h4 {
    color: var(--cream);
    margin-bottom: 1rem;
  }

  .footer-section p,
  .footer-section li {
    color: var(--light-cream);
    opacity: 0.9;
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section a {
    color: var(--light-cream);
  }

  .footer-section a:hover {
    color: var(--white);
  }

  .tagline {
    font-style: italic;
    font-size: 0.9rem;
    margin-top: 1rem;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: 1rem;
    text-align: center;
  }

  .footer-bottom p {
    color: var(--light-cream);
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .nav-container {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-menu {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }

    .logo {
      font-size: 1.5rem;
    }
  }
</style>