---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <section class="max-w-2xl mx-auto py-16 text-center bg-wcSecondary rounded-lg">
    <h2 class="text-4xl md:text-5xl font-bold text-wcBold mb-6">WoofCare Data Collection</h2>
    <form class="flex flex-col gap-6 text-left max-w-lg mx-auto">
      <label class="font-medium text-wcText">What is the name of the organization? <span class="text-wcAlert">*</span></label>
      <input type="text" required class="px-4 py-2 border border-wcText rounded bg-wcTextbox focus:outline-none focus:ring-2 focus:ring-wcButton" />
      <label class="font-medium text-wcText">Type of Organization? <span class="text-wcAlert">*</span></label>
      <div class="flex flex-col gap-2 ml-2">
        <label><input type="checkbox" name="type" value="NGO" /> NGO</label>
        <label><input type="checkbox" name="type" value="Rescue/Shelter" /> Rescue/Shelter</label>
        <label><input type="checkbox" name="type" value="Vet Clinic/Animal Hospital" /> Vet Clinic/Animal Hospital</label>
        <label><input type="checkbox" name="type" value="Local Caretaker/Feeder" /> Local Caretaker/Feeder</label>
      </div>
      <label class="font-medium text-wcText">Website link?</label>
      <input type="url" class="px-4 py-2 border border-wcText rounded bg-wcTextbox focus:outline-none focus:ring-2 focus:ring-wcButton" />
      <label class="font-medium text-wcText">Phone Number</label>
      <input type="tel" class="px-4 py-2 border border-wcText rounded bg-wcTextbox focus:outline-none focus:ring-2 focus:ring-wcButton" />
      <label class="font-medium text-wcText">Email</label>
      <input type="email" class="px-4 py-2 border border-wcText rounded bg-wcTextbox focus:outline-none focus:ring-2 focus:ring-wcButton" />
      <label class="font-medium text-wcText">Name of person in charge <span class="text-wcAlert">*</span></label>
      <input type="text" required class="px-4 py-2 border border-wcText rounded bg-wcTextbox focus:outline-none focus:ring-2 focus:ring-wcButton" />
      <label class="font-medium text-wcText">Location/Address <span class="text-wcAlert">*</span></label>
      <input type="text" required class="px-4 py-2 border border-wcText rounded bg-wcTextbox focus:outline-none focus:ring-2 focus:ring-wcButton" />
      <label class="font-medium text-wcText">Date of Establishment</label>
      <input type="text" class="px-4 py-2 border border-wcText rounded bg-wcTextbox focus:outline-none focus:ring-2 focus:ring-wcButton" />
      <label class="font-medium text-wcText">Number of Centers?</label>
      <input type="number" min="1" class="px-4 py-2 border border-wcText rounded bg-wcTextbox focus:outline-none focus:ring-2 focus:ring-wcButton" />
      <label class="font-medium text-wcText">Social Media if Applicable (Instagram, Facebook, Youtube, etc.)</label>
      <input type="text" class="px-4 py-2 border border-wcText rounded bg-wcTextbox focus:outline-none focus:ring-2 focus:ring-wcButton" />
      <button type="submit" class="bg-wcButton hover:bg-wcBold mt-6 text-wcOffwhite font-semibold py-2 rounded-lg transition">
        Submit
      </button>
    </form>
  </section>
</BaseLayout>
